<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#04d7f7">



    <ImageSwitcher
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        android:id="@+id/imageSwitcher1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">
    </ImageSwitcher>
    <RelativeLayout
        android:id="@+id/show1"
        android:layout_below="@id/imageSwitcher1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/viewnumber"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true" />

        <TextView

            android:id="@+id/txtviewnum"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:textColor="#f90e2f"
            android:textSize="15sp"
            android:textStyle="bold" />
    </RelativeLayout>
    <RelativeLayout
        android:paddingTop="0dp"
        android:layout_below="@id/show1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">
        <ImageView
            android:id="@+id/viewnumber1"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true" />

        <TextView

            android:id="@+id/txtviewnum1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:textColor="#f90e2f"
            android:textSize="15sp"
            android:textStyle="bold" />
    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="bottom">

        <Gallery
            android:id="@+id/glnumber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            ></Gallery>
    </LinearLayout>


</RelativeLayout>
